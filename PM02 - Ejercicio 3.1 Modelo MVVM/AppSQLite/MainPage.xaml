<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSQLite.MainPage">

    <StackLayout>
        <Frame BackgroundColor="DarkRed" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 3.1 Modelo MVVM" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Image Source="https://iconosmag.com/wp-content/uploads/2020/03/Comunidado-oficial-UTH-coronavirus-en-Honduras.jpg"
                   HeightRequest="200"
                   WidthRequest="400"
                   HorizontalOptions="CenterAndExpand"
                   Aspect="Fill"/>
        <Button HorizontalOptions="Center" VerticalOptions="Center" Text="AGREGAR EMPLEADO" Clicked="Button_Clicked"></Button>
        <Button x:Name="btnListPersons" HorizontalOptions="Center" VerticalOptions="Center" Text="VER EMPELADOS" Clicked="btnListPersons_Clicked"></Button>
        <Label Text="© Programacion Movil 2 2022" HorizontalTextAlignment="Center"/>
    </StackLayout>

</ContentPage>
